<div class="d-flex justify-content-center pt-5">
<div class="m-auto" id="profile_picture">
  <% if !@profile_photo.nil? %>
    <%= image_tag(@profile_photo.image.url, alt: 'Image', class: "rounded-circle border border-secondary m-2", width: "250px", height: "250px") if @profile_photo.image? %>
  <% else %>
    <%= @user.name %> has not set a profile picture.
  <% end %>
  <h1 class="text-center"><%= @user.name.capitalize %></h1>
</div>
</div>
<div class="container border border-secondary mt-4">
<div class="container m-2 mt-4">
<h2>Photos</h2>
</div>
<div class="row" id="all_pictures">
  <% @photos.order(created_at: :desc).each do |photo| %>
  <div class="col-md-4">
    <div class="card mb-2 border-0">
      <div class="card-body">
    <%= image_tag(photo.image.url, alt: 'Image', width: "100%", height: "300px") if photo.image? %>
      </div>
    </div>
  </div>
  <% end %>
  </div>
</div>



