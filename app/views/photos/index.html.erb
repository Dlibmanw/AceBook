<div class="container pt-2">
<div class="row" id="all_pictures">
    <% @photos.order(created_at: :desc).each do |photo| %>
        <div class="col-md-4">
        <% if current_user.id == photo.user_id %>
            <div class="card mb-2 border-0">
              <div class="card-body">
                <%= image_tag(photo.image.url, alt: 'Image', width: "100%", height: "300px") if photo.image? %>
                <%= button_to "Make Profile Pic", edit_user_path(current_user, photo), method: :get, :class => 'btn btn-default' %>
                <%= button_to "Delete", photo_path(photo), method: :delete, data:{}, :class => 'btn btn-link' %>
                <%= button_to "Edit", edit_photo_path(photo), method: :get, :class => 'btn btn-default' %>
              </div>
          </div>
        <% end %>
        </div>
    <% end %>
</div>
</div>
<%= button_to 'New photo', new_photo_path, method: :get, :class => 'btn btn-default' %>
</div>
