<div class="container pt-5" style="max-width: 800px">
  <%= form_for @photo do |f| %>
    <div class="form-group">
      <div class="btn btn-info">
        Select Photo
        <div style="opacity: 0">
          <%= f.label :image %>
            <%= f.file_field :image%>
          </div>
        </div>
    </div>
    <%= f.submit class: "btn btn-info" %>
  <% end %>
</div>
